<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/size_5dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="@dimen/size_20sp"
            android:textColor="@color/orange"
            />
        <EditText
            android:id="@+id/et_num"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="8"
            android:background="@drawable/edit_white_shape"
            android:layout_marginLeft="@dimen/size_10dp"
            android:inputType="numberDecimal"
            android:padding="@dimen/size_3dp"
            android:textSize="@dimen/size_14sp"
            android:hint="请输入报价"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/size_3dp"
        android:paddingBottom="@dimen/size_3dp"
        android:paddingRight="@dimen/size_5dp"
        android:paddingLeft="@dimen/size_5dp"
        android:background="@drawable/orange_shape"
        android:layout_marginLeft="@dimen/size_20dp"
        android:textSize="@dimen/size_8sp"
        android:textColor="@color/orange"
        />
</LinearLayout>