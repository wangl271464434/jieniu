<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="@dimen/size_15sp"
            android:textColor="@color/orange"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5dp"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/et_num"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLength="8"
                android:background="@color/white"
                android:inputType="numberDecimal"
                android:padding="@dimen/size_3dp"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                android:hint="报价金额"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/line_gray"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/size_3dp"
        android:paddingBottom="@dimen/size_3dp"
        android:paddingRight="@dimen/size_5dp"
        android:paddingLeft="@dimen/size_5dp"
        android:background="@drawable/orange_shape"
        android:layout_marginLeft="@dimen/size_5dp"
        android:textSize="@dimen/size_8sp"
        android:textColor="@color/orange"
        />
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已购买"
        android:textColor="@color/red"
        android:textSize="@dimen/size_8sp"
        android:layout_marginLeft="@dimen/size_5dp"
        android:visibility="gone"
        />
</LinearLayout>