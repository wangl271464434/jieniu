<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".jijian.EditShouAdrActivity">
    <include
        layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_store_search"
                android:layout_marginRight="@dimen/size_10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称："
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    />
                <EditText
                    android:id="@+id/et_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/size_5dp"
                    android:singleLine="true"
                    android:hint="自定义添加或门店搜索自动添加"
                    android:textColor="@color/home_text"
                    android:textSize="@dimen/size_15sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_store_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="门店搜索"
                android:padding="@dimen/size_5dp"
                android:background="@drawable/btn_orange_shape"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收  货  人："
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:singleLine="true"
                android:hint="收货人姓名"
                android:textColor="@color/home_text"
                android:textSize="@dimen/size_15sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话："
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:singleLine="true"
                android:hint="收货人联系方式"
                android:maxLength="11"
                android:inputType="phone"
                android:textColor="@color/home_text"
                android:textSize="@dimen/size_15sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址："
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:drawableLeft="@mipmap/ic_home_location"
                android:drawablePadding="@dimen/size_10dp"
                android:ems="17"
                android:text="请选择"
                android:textColor="@color/home_text"
                android:textSize="@dimen/size_15sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址："
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:singleLine="true"
                android:hint="门牌号，街道"
                android:textColor="@color/home_text"
                android:textSize="@dimen/size_15sp"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_50dp"
        android:text="确定"
        android:textSize="@dimen/size_15sp"
        android:textColor="@color/white"
        android:background="@drawable/login_btn"
        />
</LinearLayout>