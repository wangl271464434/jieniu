<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line_gray"
    tools:context=".mine.ui.EditFapiaoActivity">
    <include
        layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/size_20dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司全称："
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="请输入公司名称"
                android:padding="@dimen/size_5dp"
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                android:singleLine="true"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司税号："
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_shuihao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="请输入公司税号"
                android:padding="@dimen/size_5dp"
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                android:singleLine="true"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司地址："
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="请输入公司地址"
                android:padding="@dimen/size_5dp"
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                android:singleLine="true"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司电话："
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="请输入公司电话"
                android:padding="@dimen/size_5dp"
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                android:inputType="phone"
                android:singleLine="true"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开  户  行："
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="请输入公司开户行"
                android:padding="@dimen/size_5dp"
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/black"
                android:inputType="number"
                android:singleLine="true"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:background="@drawable/login_btn"
        android:layout_marginRight="@dimen/size_30dp"
        android:layout_marginLeft="@dimen/size_30dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15sp"
        android:layout_marginTop="@dimen/size_70dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_12sp"
        android:textColor="@color/home_text"
        android:layout_margin="@dimen/size_15dp"
        android:lineSpacingExtra="@dimen/size_3dp"
        android:text="@string/fapiao"
        />
</LinearLayout>