<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    tools:context=".home.OrderInfoActivity">
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:padding="@dimen/size_5dp"
        >
        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/size_18dp"
                android:layout_height="@dimen/size_17dp"
                android:src="@mipmap/ic_fanhui"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="订单信息"
            android:textColor="@color/white"
            android:textSize="@dimen/size_18sp"
            />
        <LinearLayout
            android:id="@+id/layout_share"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_share"
                />
        </LinearLayout>
    </RelativeLayout>
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        />
    <LinearLayout
        android:id="@+id/layout_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/weather_bg"
        android:layout_below="@id/layout_title"
        android:visibility="gone"
        >
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_20dp"
        android:layout_below="@id/layout_title"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_circle_refresh"
            android:text="自动刷新"
            android:paddingTop="@dimen/size_3dp"
            android:paddingBottom="@dimen/size_3dp"
            android:paddingLeft="@dimen/size_8dp"
            android:paddingRight="@dimen/size_14dp"
            android:layout_marginLeft="-5dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/refresh_text_shape"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            />
        <TextView
            android:id="@+id/tv_circle_refresh"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:text="10"
            android:gravity="center"
            android:background="@drawable/refresh_shape"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/size_16sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        >
        <include layout="@layout/dialog_share"/>
    </LinearLayout>
</RelativeLayout>