<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    tools:context=".home.OrderInfoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_240dp"
                />
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back"
                android:layout_margin="@dimen/size_10dp"
                />
            <ImageView
                android:id="@+id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_shuaxin"
                android:layout_margin="@dimen/size_10dp"
                />
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/map"
        android:background="@color/white"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在运输中"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="@dimen/size_15sp"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总         价："
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/red"
                android:textSize="@dimen/size_15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品信息："
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="箱子"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保价金额："
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
              />
            <TextView
                android:id="@+id/tv_baojia_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/red"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保价费："
                android:layout_marginLeft="@dimen/size_20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_baojia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/red"
                android:textSize="@dimen/size_15sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代收货款："
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_daishou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/red"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20dp"

                android:text="运    费："
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_yunfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/red"
                android:textSize="@dimen/size_15sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:padding="@dimen/size_10dp"
            android:drawableLeft="@mipmap/ic_order_niu"
            android:drawablePadding="@dimen/size_5dp"
            android:textSize="@dimen/size_13sp"
            android:textColor="@color/blue"
            />
        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/line_gray"
            android:visibility="gone"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_marginRight="@dimen/size_30dp"
            android:background="@color/white"
            android:paddingBottom="@dimen/size_10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:padding="@dimen/size_10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发货方"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_fahuo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="稳腾起配"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_fahuo_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="地址"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_fahuo_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="电话"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_fahuo_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_marginRight="@dimen/size_30dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/white"
            android:paddingBottom="@dimen/size_10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:padding="@dimen/size_10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货方"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_shouhuo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="稳腾起配"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_shouhuo_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="地址"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_shouhuo_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="电话"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_shouhuo_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_marginRight="@dimen/size_30dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="vertical"
            android:padding="@dimen/size_10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:src="@mipmap/user"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_user"
                    android:text="配送员"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/home_text"
                    />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送员"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/home_text"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/home_text"
                    />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送员"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/home_text"
                    />
                <TextView
                    android:id="@+id/tv_call_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系TA"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_below="@id/tv_phone"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/orange"
                    />
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_gray"
        android:layout_below="@id/layout_info"
        />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>