<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".luntan.AppearTextActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_15dp"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@mipmap/ic_back"
            />
        <TextView
            android:id="@+id/tv_appear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="发表"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_15sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/light_black"
        />
    <EditText
        android:id="@+id/et_context"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:textSize="@dimen/size_15sp"
        android:textColor="@color/light_black"
        android:background="@drawable/edit_white_shape"
        android:padding="@dimen/size_5dp"
        android:hint="这一刻想说点什么……"
        android:gravity="top"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:layout_marginLeft="@dimen/size_30dp"
        />
</LinearLayout>