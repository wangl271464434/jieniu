<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_15dp"
        android:paddingRight="@dimen/size_15dp"
        android:paddingBottom="@dimen/size_10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home_shoujian"
                />
            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_centerVertical="true"
                android:text="运单号：10000000025"
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/home_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    />
                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="箱子"
                    android:textSize="@dimen/size_14sp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textColor="@color/light_black"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2件"
                android:textColor="@color/tab_normal"
                android:textSize="@dimen/size_14sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            >
            <ImageView
                android:id="@+id/img_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home_truck"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_yunshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_start"
                android:layout_toLeftOf="@id/img_middle"
                android:gravity="center"
                android:text="运输中"
                android:textColor="@color/black"
                android:textSize="@dimen/size_10sp"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/img_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home_truck"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_peisong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_middle"
                android:layout_toLeftOf="@id/img_end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/size_10sp"
                android:layout_centerVertical="true"
                android:text="张三配送中"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/img_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home_truck"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            >
            <ImageView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home_loadingfa"
                />
            <ProgressBar
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/end"
                android:layout_toRightOf="@id/start"
                style="@style/ProgressBar_Scale"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginRight="@dimen/size_5dp"
                />
            <ImageView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_home_loadingshou"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            >
            <TextView
                android:id="@+id/tv_start_adr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起点"
                android:textSize="@dimen/size_10sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/size_10sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_end_adr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终点"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/size_10sp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>