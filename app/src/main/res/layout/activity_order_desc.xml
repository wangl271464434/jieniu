<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.OrderDescActivity">
    <include
        layout="@layout/title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/line_gray"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:id="@+id/layout_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_status"
        android:paddingLeft="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品信息："
            android:textColor="@color/black"
            android:textSize="@dimen/size_15sp"
            />
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="箱子"
            android:textColor="@color/black"
            android:textSize="@dimen/size_15sp"
            android:ellipsize="end"
            android:ems="7"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_desc"
        android:background="@drawable/tab"
        android:layout_margin="@dimen/size_10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/order_tab"
                    android:text="数量"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_num"
                    android:text="10"
                    android:textColor="@color/red"
                    style="@style/order_tab"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/order_tab"
                    android:text="保价金额"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_baojia_money"
                    style="@style/order_tab"
                    android:text="10"
                    android:textColor="@color/red"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/order_tab"
                    android:text="保价费"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_baojia"
                    style="@style/order_tab"
                    android:text="10"
                    android:textColor="@color/red"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/order_tab"
                    android:text="代收货款"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_daishou"
                    style="@style/order_tab"

                    android:text="10"
                    android:textColor="@color/red"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/order_tab"

                    android:text="运费"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_yunfei"
                    style="@style/order_tab"

                    android:text="10"
                    android:textColor="@color/red"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/order_tab"

                    android:text="总价"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_total"
                    style="@style/order_tab"
                    android:text="10"
                    android:textColor="@color/red"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/line_gray"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/size_10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:padding="@dimen/size_10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发货方"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_fahuo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="稳腾起配"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_fahuo_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="地址"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_fahuo_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="电话"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_fahuo_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/white"
            android:paddingBottom="@dimen/size_10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:padding="@dimen/size_10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货方"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_shouhuo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="稳腾起配"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_shouhuo_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="地址"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <TextView
                android:id="@+id/tv_shouhuo_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="电话"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_shouhuo_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="vertical"
            android:padding="@dimen/size_10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:src="@mipmap/user"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_user"
                    android:text="配送员"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/home_text"
                    />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送员"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/home_text"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/home_text"
                    />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送员"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/home_text"
                    />
                <TextView
                    android:id="@+id/tv_call_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系TA"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_below="@id/tv_phone"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/orange"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:text="签收照片："
                    android:textSize="@dimen/size_15sp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/size_160dp"
                    android:layout_height="@dimen/size_160dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/loading"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>