<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_20dp"
        android:background="@drawable/bg_white_shape"
        android:paddingTop="@dimen/size_8dp"
        android:paddingBottom="@dimen/size_10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/img_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home_shoujian"
                />
            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_type"
                android:text="运单号：1233333346"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/home_text"
                android:layout_marginLeft="@dimen/size_10dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="下单时间：2019-04-10 11：00：01"
            android:textColor="@color/home_text"
            android:textSize="@dimen/size_14sp" />
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="物品信息：暂无"
            android:layout_marginTop="@dimen/size_5dp"
            android:textColor="@color/home_text"
            android:textSize="@dimen/size_14sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/light_black"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                />
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X1"
                android:layout_below="@id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:text="合计"
                android:textColor="@color/black"
                android:textSize="@dimen/size_18sp" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:text="￥12"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/red"
                android:textSize="@dimen/size_18sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去支付"
                android:layout_marginRight="@dimen/size_15dp"
                android:textColor="@color/orange"
                android:background="@drawable/orange_shape"
                android:padding="@dimen/size_5dp"
                android:textSize="@dimen/size_16sp" />
            <TextView
                android:id="@+id/tv_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="再来一单"
                android:layout_marginRight="@dimen/size_15dp"
                android:background="@drawable/orange_shape"
                android:padding="@dimen/size_5dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/size_16sp" />
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消订单"
                android:padding="@dimen/size_5dp"
                android:background="@drawable/orange_shape"
                android:layout_marginRight="@dimen/size_15dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/size_16sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size_50dp"
        android:layout_marginTop="@dimen/size_50dp"
        android:visibility="gone"
        />
</RelativeLayout>