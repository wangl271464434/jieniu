<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.ui.SetPwdActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:padding="@dimen/size_10dp"
        >
        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/size_18dp"
                android:layout_height="@dimen/size_17dp"
                android:src="@mipmap/ic_fanhui"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="设置登录账号"
            android:textColor="@color/white"
            android:textSize="@dimen/size_18sp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_15sp"
        android:layout_margin="@dimen/size_15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_70dp"
        android:padding="@dimen/size_10dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_5dp"
            >
            <EditText
                android:id="@+id/et_pwd"
                style="@style/edit"
                android:hint="请设置密码"
                android:drawableLeft="@mipmap/ic_setting_password_old"
                android:layout_toLeftOf="@id/img_eye1"
                android:layout_marginRight="@dimen/size_10dp"
                android:inputType="textPassword"
                />
            <ImageView
                android:id="@+id/img_eye1"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:src="@mipmap/ic_setting_invisible"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_5dp"
            >
            <EditText
                android:id="@+id/et_pwd_again"
                style="@style/edit"
                android:drawableLeft="@mipmap/ic_setting_pwd_new"
                android:hint="请再次确认密码"
                android:layout_toLeftOf="@id/img_eye2"
                android:layout_marginRight="@dimen/size_10dp"
                android:inputType="textPassword"
                />

            <ImageView
                android:id="@+id/img_eye2"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:src="@mipmap/ic_setting_invisible" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
    </LinearLayout>
    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:background="@drawable/login_btn"
        android:layout_margin="@dimen/size_50dp"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/size_16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/sure" />
</LinearLayout>