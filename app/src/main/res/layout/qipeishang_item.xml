<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_15dp"
        >
        <LinearLayout
            android:id="@+id/layout_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_80dp"
                android:src="@mipmap/loading"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/size_12sp"
                android:gravity="center"
                android:paddingTop="@dimen/size_3dp"
                android:paddingBottom="@dimen/size_3dp"
                android:paddingLeft="@dimen/size_8dp"
                android:paddingRight="@dimen/size_8dp"
                android:background="@drawable/gray_shape"
                android:layout_marginTop="@dimen/size_10dp"
                android:drawablePadding="@dimen/size_5dp"
                android:drawableLeft="@mipmap/ic_autodealer_dial"
                android:textColor="@color/gray"
                android:text="联系他"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/layout_img"
            android:layout_marginLeft="@dimen/size_10dp"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                android:text="A汽修商"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_cars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经营车型："
                    android:textSize="@dimen/size_12sp"
                    android:textColor="@color/light_black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="@dimen/size_12sp"
                android:layout_marginTop="@dimen/size_5dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/line_gray"
                android:layout_marginTop="@dimen/size_10dp"
                />
        </LinearLayout>
    </RelativeLayout>



