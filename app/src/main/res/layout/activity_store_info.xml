<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.ui.StoreInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_15dp"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@mipmap/ic_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="我的门店"
            android:textSize="@dimen/size_18sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_certify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新认证"
            android:textSize="@dimen/size_15sp"
            android:textColor="@color/orange"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/line_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店名称："
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/et_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:drawableRight="@mipmap/ic_center_more"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/size_10dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店类型："
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:drawableRight="@mipmap/ic_center_more"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/line_gray"
                />
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                >
                <TextView
                    android:id="@+id/tv_yewu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主营业务："
                    android:textSize="@dimen/size_16sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/et_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:drawableRight="@mipmap/ic_center_more"
                    android:textSize="@dimen/size_16sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经营车型："
                    android:textSize="@dimen/size_16sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_car_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请选择车型"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:padding="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:drawableRight="@mipmap/ic_center_more"
                    android:textSize="@dimen/size_16sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址："
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:drawableRight="@mipmap/ic_center_more"
                android:ems="15"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联  系  人："
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textSize="@dimen/size_16sp"
                android:singleLine="true"
                android:drawableRight="@mipmap/ic_center_more"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话："
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:maxLength="11"
                android:inputType="phone"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textSize="@dimen/size_16sp"
                android:singleLine="true"
                android:drawableRight="@mipmap/ic_center_more"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="固定电话："
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/et_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textSize="@dimen/size_16sp"
                android:singleLine="true"
                android:drawableRight="@mipmap/ic_center_more"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店简介："
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textSize="@dimen/size_16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawableRight="@mipmap/ic_center_more"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <LinearLayout
            android:id="@+id/layout_add_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加门店照片"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/size_5dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textSize="@dimen/size_16sp"
                android:text="添加或者查看图片"
                android:singleLine="true"
                android:drawableRight="@mipmap/ic_center_more"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>