<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mine.ui.ModifyPwdActivity">
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/setting_tab3"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/size_16sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:layout_marginTop="@dimen/size_70dp"
        android:padding="@dimen/size_10dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_5dp"
            >
            <EditText
                android:id="@+id/et_old_pwd"
               style="@style/edit"
                android:hint="请输入旧密码"
                android:drawableLeft="@mipmap/ic_setting_password_old"
                android:layout_toLeftOf="@id/img_eye1"
                android:layout_marginRight="@dimen/size_10dp"
                android:inputType="textPassword"
                />
            <ImageView
                android:id="@+id/img_eye1"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:src="@mipmap/ic_setting_invisible"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_5dp"
            >

            <EditText
                android:id="@+id/et_new_pwd"
                style="@style/edit"
                android:drawableLeft="@mipmap/ic_setting_pwd_new"
                android:hint="请输入新密码"
                android:layout_toLeftOf="@id/img_eye2"
                android:layout_marginRight="@dimen/size_10dp"
                android:inputType="textPassword"
                />

            <ImageView
                android:id="@+id/img_eye2"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:src="@mipmap/ic_setting_invisible" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_5dp"
            >
            <EditText
                android:id="@+id/et_again_pwd"
                style="@style/edit"
                android:drawableLeft="@mipmap/ic_setting_password_new2"
                android:inputType="textPassword"
                android:layout_toLeftOf="@id/img_eye3"
                android:layout_marginRight="@dimen/size_10dp"
                android:hint="请再次输入密码"
                />
            <ImageView
                android:id="@+id/img_eye3"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:src="@mipmap/ic_setting_invisible"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/line_gray"
            />
    </LinearLayout>
    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:background="@drawable/login_btn"
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:layout_marginBottom="@dimen/size_50dp"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/size_16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/sure" />
</RelativeLayout>