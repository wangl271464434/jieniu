<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/line_gray"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            >
            <LinearLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/setting"
                android:layout_toLeftOf="@id/tv_like"
                android:layout_marginTop="@dimen/size_15dp"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/img_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_center_vip"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_17sp"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_center_setting"
                android:layout_margin="@dimen/size_15dp"
                />
            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/size_15dp"
                />
            <RelativeLayout
                android:id="@+id/layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/layout_name"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                >
                <ImageView
                    android:id="@+id/head_img"
                    android:layout_width="@dimen/size_75dp"
                    android:layout_height="@dimen/size_75dp"
                    android:src="@mipmap/user"
                    />
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汽修商"
                    android:layout_marginTop="-10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/head_img"
                    android:textColor="@color/white"
                    android:paddingRight="@dimen/size_10dp"
                    android:paddingLeft="@dimen/size_10dp"
                    android:paddingTop="@dimen/size_3dp"
                    android:paddingBottom="@dimen/size_3dp"
                    android:background="@drawable/mine_name_shape"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_img"
                android:layout_marginTop="@dimen/size_10dp"
                android:paddingBottom="@dimen/size_20dp"
                >
                <LinearLayout
                    android:id="@+id/layout_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_15sp"
                        android:textColor="@color/white"
                        android:text="@string/score"
                        />
                    <TextView
                        android:id="@+id/score_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_18sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:text="0"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_15sp"
                        android:textColor="@color/white"
                        android:text="@string/ticket"
                        />
                    <TextView
                        android:id="@+id/ticket_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_18sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:text="0"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的地址"
            android:layout_margin="@dimen/size_15dp"
            android:textSize="@dimen/size_15sp"
            android:textColor="@color/black"
            />
        <RelativeLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/img"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_60dp"
                android:background="@color/moren"
                android:text="@string/moren"
                android:lineSpacingExtra="@dimen/size_3dp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_15sp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/size_20dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:ems="20"
                    android:textSize="@dimen/size_12sp"
                    android:textColor="@color/light_black"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_center_more"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_20dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_15dp"
            android:text="常用功能"
            android:textColor="@color/black"
            android:textSize="@dimen/size_15sp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</RelativeLayout>