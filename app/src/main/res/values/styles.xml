<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@drawable/md_divider</item>
    </style>

    <style name="Dialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--dialog弹出时activity的背景-->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="register_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/size_10dp</item>
        <item name="android:textColor">@drawable/regist_tab_sel</item>
    </style>
    <style name="main_radio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/regist_tab_sel</item>
    </style>
    <style name="home_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/size_10dp</item>
        <item name="android:textSize">@dimen/size_12sp</item>
        <item name="android:drawablePadding">@dimen/size_3dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ProgressBar_Scale" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress</item>
    </style>

    <style name="edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:paddingTop">@dimen/size_10dp</item>
        <item name="android:paddingBottom">@dimen/size_10dp</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="jijian_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/size_5dp</item>
        <item name="android:layout_marginLeft">@dimen/size_5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/size_10dp</item>
        <item name="android:background">@drawable/radiobtn_bg</item>
        <item name="android:textColor">@color/home_text</item>
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>
    <style name="psy_radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/size_10dp</item>
        <item name="android:textColor">@drawable/regist_tab_sel</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="order_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_tv</item>
        <item name="android:textSize">@dimen/size_15sp</item>
        <item name="android:padding">@dimen/size_3dp</item>
    </style>
</resources>
